<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="materials.xacro" />

    <link name="base_link">
    </link>


    <joint name="Chassis_joint" type="fixed">
        <parent link="base_link" />
        <child  link="Chassis_link" />
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="Chassis_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>           
                <mesh   filename="file://$(find AMR-Sweeper_description)/meshes/Chassis/Chassis.stl" />  
            </geometry>   
            <material name="grey"/>     
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>           
                <mesh   filename="file://$(find AMR-Sweeper_description)/meshes/Chassis/Chassis.stl" />  
            </geometry>     
        </collision>

        <inertial>
            <origin xyz="0.054 0 0.110" rpy="0 0 0"/>
            <mass value="15.4" />
            <inertia ixx="0.2" ixy="0.002" ixz="-0.010" iyy="0.376" iyz="0.000" izz="0.508" />
        </inertial>
    </link>




    <joint name="LeftWheel_joint" type="continuous">
        <parent link="base_link" />
        <child  link="LeftWheel_link" />
        <origin xyz="0 0.244 0" rpy="-${pi/2} 0 0" />
        <axis   xyz="0 0 1" />
    </joint>

    <link name="LeftWheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
            <geometry>
                <mesh   filename="file://$(find AMR-Sweeper_description)/meshes/WheelAssembly/WheelAssembly.stl" />  
            </geometry>
            <material name="yellow"/>       
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
            <geometry>
                <mesh   filename="file://$(find AMR-Sweeper_description)/meshes/WheelAssembly/WheelAssembly.stl" />  
            </geometry>       
        </collision>

        <inertial>
            <origin xyz="0 0.1 0" rpy="0 0 0"/>
            <mass value="1.5" />
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.01" />
        </inertial>
    </link>




    <joint name="RightWheel_joint" type="continuous">
        <parent link="base_link" />
        <child  link="RightWheel_link" />
        <origin xyz="0 -0.244 0" rpy="${pi/2} 0 0" />
        <axis   xyz="0 0 -1" />
    </joint>

    <link name="RightWheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
            <geometry>
                <mesh   filename="file://$(find AMR-Sweeper_description)/meshes/WheelAssembly/WheelAssembly.stl" />  
            </geometry>
            <material name="yellow"/>       
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
            <geometry>
                <mesh   filename="file://$(find AMR-Sweeper_description)/meshes/WheelAssembly/WheelAssembly.stl" />  
            </geometry>       
        </collision>

        <inertial>
            <origin xyz="0 0.1 0" rpy="0 0 0"/>
            <mass value="1.5" />
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.01" />
        </inertial>
    </link>



    <joint name="GNSS_joint" type="fixed">
        <parent link="base_link" />
        <child  link="GNSS_link" />
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="GNSS_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>           
            <!--    <mesh   filename="file://$(find AMR-Sweeper_description)/meshes/Sensors/GNSS.stl" />  -->
            </geometry>
            <material name="black"/>     
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>           
            <!--    <mesh   filename="file://$(find AMR-Sweeper_description)/meshes/Sensors/GNSS.stl" />  -->
            </geometry>     
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0" />
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
    </link>





</robot>
